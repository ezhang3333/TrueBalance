# TrueBalance Local Development Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/truebalance

# Security
SESSION_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
TELLER_TOKEN_KEY=your-teller-token-encryption-key-change-this-min-32-chars

# Teller API Configuration
# Get these from your Teller Developer Console: https://teller.io/
TELLER_APPLICATION_ID=your_teller_app_id
TELLER_CERTIFICATE=your_teller_certificate_content
TELLER_PRIVATE_KEY=your_teller_private_key_content
TELLER_ENVIRONMENT=sandbox

# Application Configuration
NODE_ENV=development
PORT=5000

# Rate Limiting Configuration (Optional)
# AUTH_LOGIN_WINDOW_MS=900000          # 15 minutes login window
# AUTH_LOGIN_MAX=5                     # Max 5 login attempts per window
# AUTH_REGISTER_WINDOW_MS=300000       # 5 minutes registration window (dev)
# AUTH_REGISTER_MAX=20                 # Max 20 registration attempts (dev)

# Password Hashing (Optional)
# BCRYPT_ROUNDS=8                      # 8 rounds for dev (faster), 12+ for prod

# Development Features (Optional)
# SEED_ON_START=true                   # Seed database with demo data
# CHOKIDAR_USEPOLLING=1               # Enable if file watching doesn't work

# Optional: For production deployment
# NODE_ENV=production
# Add your production database URL
# Add your production Teller credentials